package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {
	
	public static final double PI = 3.14;  //Prova de que esse valor não pode mudar

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("ENTRE COM O VALOR DO RAIO: ");
		double raio = sc.nextDouble();
		
		double cir = circuferencia(raio);
		
		double vol = volume(raio);
		
		System.out.println();
		System.out.printf("CIRCUNFERENCIA: %.2f\n", cir);
		System.out.printf("VOLUME: %.2f\n", vol);
		System.out.printf("VALOR DO PI: %.2f\n", PI);
		sc.close();
	}
	
	public static double circuferencia(double raio) {
		
		return 2.0 * PI * raio;
	}
	
	public static double volume(double raio) {
		
		return 4.0 * PI * raio * raio * raio / 3.0;
	}

}
